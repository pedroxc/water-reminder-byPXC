{

    "manifest_version": 2,
    "name": "Lembrar de beber água!",
    "version": "1",
    "author": "Pedro Coelho -https://github.com/pedroxc",
    "description":
      "Uma extensão para se hidratar!.",
    "icons": { "48": "icon.png"},
  
  
    "permissions": [
      "storage",
      "notifications"
    ],
  
    "browser_action" :{
      "default_icon":"icon.png",
      "default_popup":"popup.html"
   },
  
  
    "background": { 
      "scripts": ["background.js"]
     },
  
    "web_accessible_resources": [
      "icon.png"
    ]
  }
  